{
    "name": "@reemo/flatten-dir-deno",
    "version": "0.1.0",
    "exports": "./mod.ts",
    "compilerOptions": {
        "allowJs": true,
        "lib": [
            "deno.window"
        ],
        "strict": true
    },
    "tasks": {
        "start": "deno run -A mod.ts",
        "dev": "deno run -A  mod.ts testFolder",
        "install": "deno install -A -n flatDir -f mod.ts",
        "pwd": "cd $INIT_CWD && pwd"
    },
    "fmt": {
        "useTabs": true,
        "lineWidth": 80,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": true,
        "proseWrap": "preserve",
        "include": [
            "src/"
        ]
    }
}