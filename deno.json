{
    "compilerOptions": {
        "allowJs": true,
        "lib": ["deno.window"],
        "strict": true
    },
    "tasks": {
        "start": "deno run -A flattenDirectory.ts",
        "dev":   "deno run -A  flattenDirectory.ts testFolder",
        "install": "deno install -A -n flatDir -f flattenDirectory.ts",
        "test": "deno test --allow-read test/general.test.ts",
        "pwd": "cd $INIT_CWD && pwd"
    },
    "fmt": {
        "useTabs": true,
        "lineWidth": 80,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": true,
        "proseWrap": "preserve",
        "include": ["src/"]
    }
}